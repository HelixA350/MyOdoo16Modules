<odoo>
    <data>
        <!-- Form View -->
        <record id="view_some_model_form" model="ir.ui.view">
            <field name="name">some.model.form</field>
            <field name="model">some_model</field>
            <field name="arch" type="xml">
                <form string="Some Model Form">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="password"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_add_user" model="ir.actions.act_window">
            <field name="name">Customer Details Report</field>
            <field name="res_model">some_model</field>
            <field name="view_mode">form</field>

        </record>

        <menuitem id="menu_customer_details"
                  name="Users Module"
                  sequence="1"
                  groups="base.group_user"/>  

        <menuitem id="menu_customer_details_main_reports"
                  name="Options"
                  parent="menu_customer_details"
                  sequence="0"
                  groups="base.group_user"/>  

        <menuitem id="menu_customer_details_report"
                  name="Creating Users"
                  parent="menu_customer_details_main_reports"
                  action="action_add_user"
                  sequence="0"
                  groups="base.group_user"/>  

    </data>
</odoo>
